
@{
    ViewData["Title"] = "Feedback";
}

<div class="ew-events" id="feedback-model">
    <div class="events-header">
        <div class="events-title">
            <h1>Give feedback</h1>
            <button data-bind="click: goToEventList" class="ew-btn non-form-btn">Go back to events</button>
        </div>
    </div>

    <hr data-bind="callFunction: getUsers" />

    <!-- ko if: users().length == 0 -->
    <h2 class="no-events-text">No feedback to offer</h2>
    <!-- /ko -->

    <div data-bind="foreach: users" class="events-container">
        <div class="enrollment-approve">
            <h5 data-bind="text: $rawData.firstName + ' ' + $rawData.lastName"></h5>
            <h6 data-bind="text: $rawData.age"></h6>
            <div class="rating">
                <span class="select" data-bind="click : $parent.submitRating" data-rating="5">☆</span>
                <span class="select" data-bind="click : $parent.submitRating" data-rating="4">☆</span>
                <span class="select" data-bind="click : $parent.submitRating" data-rating="3">☆</span>
                <span class="select" data-bind="click : $parent.submitRating" data-rating="2">☆</span>
                <span class="select" data-bind="click : $parent.submitRating" data-rating="1">☆</span>
            </div>
        </div>
    </div>
</div>

<script src="~/js/feedback.js"></script>
<script type="text/javascript">
    EventWorld.Feedback.init();
</script>
